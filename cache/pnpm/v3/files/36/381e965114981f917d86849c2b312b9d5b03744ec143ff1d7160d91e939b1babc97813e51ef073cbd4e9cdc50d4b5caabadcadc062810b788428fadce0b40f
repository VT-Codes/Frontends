        `}
`;
const StyledA = styled(motion.a)`
  color: ${({
  theme
}) => theme.color.primary};
  text-decoration: none;
  position: relative;
  z-index: ${({
  zIndexOver = false
}) => zIndexOver ? '9999 !important' : '999 !important'};
