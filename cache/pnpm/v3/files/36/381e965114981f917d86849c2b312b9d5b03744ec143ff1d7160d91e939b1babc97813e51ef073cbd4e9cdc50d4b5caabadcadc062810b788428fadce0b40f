  const digit = parseInt(props.size || '2');
  return (digit / 1.5).toString() + 'rem';
}};
  }
`;

const test = {
  center: 'center',
  right: 'flex-end',
  left: 'flex-start'
};
const Row = styled(motion.div)`
  display: ${({
  inline = false
}) => inline ? 'inline-flex' : 'flex'};
  flex-direction: row;

  justify-content: ${({
  align = 'left'
}) => test[align]};
  ${({
  gap = 'auto'
}) => gap === 'auto' ? css`
          justify-content: space-between;
        ` : css`
          gap: ${gap}rem !important;
        `};
  padding: ${({
  padding = '0'
}) => `${padding}rem`};
`;

