const colorTypes$1 = {
  error: 'rgba(200, 50, 50, 1)',
  warn: 'rgb(255,255,0)'
};
const OutlinedButton = styled(CoreButton)`
  --color: ${({
  theme,
  color
}) => {
  if (color) {
    return colorTypes$1[color];
  }

  return theme.color.secondary;
}};

