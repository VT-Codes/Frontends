  return restrictWidth ? css`
          max-width: ${width}ch;
        ` : null;
}}

  ${({
  bold
}) => {
  if (bold) {
    return css`
        font-weight: 500;
      `;
  } else {
    return null;
  }
}}


  width: auto;
`;

const Title = styled(motion.h1)`
