{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "rootDir": ".",
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "removeComments": true,
    "newLine": "lf",
    "paths": {
      "@v-thomas/honey/shell": ["libs/honey/shell/src/public_api.tsx"],
      "@v-thomas/honey/theme": ["libs/honey/theme/src/public_api.ts"],
      "@v-thomas/root/*": ["*"],
      "@v-thomas/shared/theme": ["libs/shared/theme/src/public_api.ts"],
      "@v-thomas/shared/ui": ["libs/shared/ui/src/public_api.ts"],
      "@v-thomas/shared/web-utils": ["libs/shared/web-utils/src/public_api.ts"],
      "@v-thomas/thunder/app": ["libs/thunder/app/src/public_api.tsx"],
      "@v-thomas/thunder/data-access": ["libs/thunder/data-access/src/public_api.ts"]
    }
  }
}
