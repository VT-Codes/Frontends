{
  "root": "libs/thunder/common/ui",
  "sourceRoot": "libs/thunder/common/ui/src",
  "projectType": "library",
  "tags": ["scope:thunder", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/thunder/common/ui",
        "tsConfig": "libs/thunder/common/ui/tsconfig.lib.json",
        "project": "libs/thunder/common/ui/package.json",
        "extractCss": true,
        "entryFile": "libs/thunder/common/ui/src/public_api.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "compiler": "swc",
        "assets": [
          {
            "glob": "libs/thunder/common/ui/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "**/*",
            "input": "libs/thunder/assets",
            "output": "./assets/"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/thunder/common/ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/thunder/common/ui"],
      "options": {
        "jestConfig": "libs/thunder/common/ui/jest.config.ts",
        "passWithNoTests": true,
        "bail": 1
      }
    }
  }
}
