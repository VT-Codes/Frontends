{
  "root": "libs/thunder/theme",
  "sourceRoot": "libs/thunder/theme/src",
  "tags": ["scope:thunder", "type:theme"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/thunder/theme",
        "main": "libs/thunder/theme/src/index.ts",
        "tsConfig": "libs/thunder/theme/tsconfig.lib.json",
        "assets": ["libs/thunder/theme/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/thunder/theme/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/thunder/theme"],
      "options": {
        "jestConfig": "libs/thunder/theme/jest.config.ts",
        "passWithNoTests": true,
        "onlyChanged": true
      }
    }
  }
}
